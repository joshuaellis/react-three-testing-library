{
  "name": "react-three-testing-library",
  "version": "0.0.0-semantically-released",
  "description": "react-three-fiber testing library for jest modelled closely on the ethos of testing-library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "testing",
    "react",
    "three",
    "unit",
    "integration"
  ],
  "repository": "https://www.github.com/joshuaellis/react-three-testing-library",
  "author": "Josh Ellis <joshua.ellis18@gmail.com>",
  "license": "MIT",
  "private": true,
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:ts": "tsc --noEmit",
    "test:watch": "jest --watchAll"
  },
  "peerDependencies": {
    "@react-three/fiber": ">=6.0",
    "@react-three/test-renderer": ">=6.0",
    "react": ">=16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@react-three/fiber": "^7.0.6",
    "@react-three/test-renderer": "^7.0.6",
    "@studiocompanion/scripts": "^1.1.0",
    "@types/jest": "^27.0.0",
    "@types/react": "^17.0.27",
    "@types/react-test-renderer": "^17.0.1",
    "@types/three": "^0.131.0",
    "babel-jest": "^27.0.6",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "three": "^0.131.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  }
}
