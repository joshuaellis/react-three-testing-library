{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "preserveWatchOutput": true,
    "outDir": "lib",
    "noImplicitThis": false
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
